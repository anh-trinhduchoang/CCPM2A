                                                </div>
                                            </div>
                                        </div>
                                        <div class="block2-txt p-t-20">
                                            <a href="@url" class="block2-name dis-block s-text3 p-b-5">
                                                @product.Name
                                            </a>
                                            @if (product.PromotionPrice.HasValue)
                                            {
                                                <span class="block2-price m-text6 p-r-5">
                                                    @product.PromotionPrice.Value.ToString("N0")
                                                </span>
                                            }
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
